<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="css/style_nach.css">
  <link rel="stylesheet" href="css/katalog.css">
  <link href="img/paw.png" rel="shortut icon" type="img/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;400&display=swap" rel="stylesheet">
  <title>ZooWorld</title>
</head>

<body>
    <%- include('header', {user, page, productsCount}) %>

<div class="katalog">
    <h1>Каталог товаров</h1>
    <hr noshade width="25%" size="4" color="black">
    <div class="tovars">
        <% categories.forEach(function(category) { %>
            <div class="tov">
                <label class="label-tovars"><%= category.name %></label>
                <div class="vnutr-tov">
                    <% products.filter(product => product.category_id == category.id).forEach(function(product) { %>
                        <%- include('product', {product}) %>
                    <% }); %>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('footer', {page}) %>
  
   <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
   <script src="js/scroll.js"></script>
  </body>
  </html>